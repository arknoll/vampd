{
  "name": "example",
  "description": "An example site to load Drupal.",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "override_attributes": {
    "drupal": {
      "sites": {
        "example": {
          "active": 1,
          "deploy": {
            "action": ["deploy", "install"]
          },
          "repository": {
            "uri": "https://github.com/drupal/drupal.git",
            "revision": "7.31"
          },
          "drupal": {
            "settings": {
              "profile": "standard"
            }
          }
        }
      }
    }
  }
}
